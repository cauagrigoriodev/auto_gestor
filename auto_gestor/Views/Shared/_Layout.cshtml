<!DOCTYPE html>
<html lang="pt-br">
 <!-- Define o idioma da página como português do Brasil -->
<head>
    <meta charset="utf-8" /> <!-- Define o conjunto de caracteres da página como UTF-8 -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" /> <!-- Ajusta a responsividade para diferentes dispositivos -->
    <title>@ViewData["Title"] - Auto Gestor</title> <!-- Define o título da página dinamicamente com ViewData -->
    <!-- Importa os arquivos CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> <!-- Estilos do Bootstrap -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> <!-- CSS personalizado do site -->
    <link rel="stylesheet" href="~/auto_gestor.styles.css" asp-append-version="true" /> <!-- Estilos específicos do projeto -->
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Link para a página inicial -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Auto Gestor</a>

                <!-- Botão do menu responsivo -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Menu de navegação -->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Página Inicial</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Relatorios" asp-action="Index">Relatórios</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Cadastro" asp-action="Index">Cadastros</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Pagamentos" asp-action="Index">Pagamentos</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Área principal da página -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody() <!-- Renderiza o conteúdo da página específica -->
        </main>
    </div>

    <!-- Rodapé da página -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Auto Gestor <!-- Exibe o nome da aplicação e o ano -->
        </div>
    </footer>

    <!-- Scripts JavaScript -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script> <!-- Importa a biblioteca jQuery -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> <!-- Importa o JavaScript do Bootstrap -->
    <script src="~/js/site.js" asp-append-version="true"></script> <!-- Importa o JavaScript personalizado do site -->
    @await RenderSectionAsync("Scripts", required: false) <!-- Permite que páginas específicas adicionem scripts personalizados -->
</body>
</html>
